[Unit]
Description=CV Classifier API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/cv-classifier
Environment="PYTHONPATH=/home/ubuntu/cv-classifier"
EnvironmentFile=/home/ubuntu/cv-classifier/.env
ExecStart=/home/ubuntu/cv-classifier/venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
