# ==============================================
# CV Classifier - Environment Variables
# ==============================================
# Copier ce fichier vers .env et remplir les valeurs

# HuggingFace Token (REQUIS pour le chatbot IA)
# Obtenir sur: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# Application
ENVIRONMENT=production
LOG_LEVEL=INFO
PORT=8000

# AWS (pour le déploiement)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=eu-west-1
AWS_ACCOUNT_ID=123456789012

# ECR
ECR_REPOSITORY=cv-classifier

# Base de données (optionnel)
DATABASE_URL=sqlite:///data/cv_history.db

# MLflow (optionnel)
MLFLOW_TRACKING_URI=http://localhost:5000

# Sentry (monitoring, optionnel)
SENTRY_DSN=
